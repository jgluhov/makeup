$bg-color = #505b62


$record-navigation-height = 60px
$record-navigation-padding-top = 15px
$record-navigation-padding-bottom = 5px
$record-navigation-bg-color = #ffffff
$record-navigation-opacity = 0.8
$record-navigation-list-item-font-size = 20px
$record-navigation-list-item-font-weight = 200
$record-navigation-list-item-color = #444c51

$record-information-height = 50px
$record-information-margin-left = 30px

$record-information-title-font-size = 26px
$record-information-title-color-default = #ffffff
$record-information-title-color-invert = #444c51
$record-information-emotion-font-size = 24px

$record-background-opacity = 0.5
$record-background-bg-color = #f5f5f5

$record-category-icon-bg-color = #dee1e3
$record-category-icon-border-color = #ffffff

$record-people-height = 160px
$record-people-bg-height = 300px

$record-places-height = 160px
$record-places-bg-height = 350px

$record-photo-height = 160px
$record-photo-bg-height = 350px

$record-video-height = 160px
$record-video-bg-height = 400px

$record-music-height = 160px
$record-music-bg-height = 400px

body
  background $bg-color

.uk-record-content
  margin-bottom 50px

.uk-record-block
  position relative
  width 100%
  margin-bottom 50px
  &:first-child
    margin-top 50px

  &:not(.uk-record-background)
    > img
      display none
    .uk-record-information
      >.record-title
        color $record-information-title-color-invert
      >.record-emotion
        color $record-information-title-color-invert
    >.uk-record-information
      >.record-emotion
        > svg
          g
            fill #444c51


  &.uk-record-music
    >.uk-record-information
      >.record-title
        margin-left 22px
        &:before
          position absolute
          content " "
          background url('/images/icon_play.svg')
          background-repeat no-repeat
          height 16px
          width 16px
          left 0

  &.uk-record-video
    iframe
      height calc("100% - 60px")

  >.uk-record-information
    position absolute
    bottom calc($record-information-height + 30px)
    height $record-information-height
    margin-left $record-information-margin-left

    >.record-title
      font-size $record-information-title-font-size
      color $record-information-title-color-default
      margin-bottom 15px

    >.record-emotion
      font-size 24px
      font-weight 100
      text-transform capitalize

      color #ffffff

      > svg
        position relative
        top 2px
        height 18px
        margin-right 10px
        g
          fill #ffffff


  &.uk-record-background
    display: inline-block
    vertical-align middle
    > img
      vertical-align middle
      size 100%
      opacity $record-background-opacity

  // category
  >.uk-record-category
    position absolute
    display inline-block
    vertical-align middle
    z-index 1
    background-color $record-category-icon-bg-color
    size 90px
    bottom 40px
    right 10px
    border-radius 50%
    overflow hidden

    &.uk-record-category-has-icon
      border 1px solid $record-category-icon-border-color
      img
        position relative
        display block
        top calc("50% - 25px")
        height 50px
    img
      border-radius 50%
      width 100%


  // people
  &.uk-record-people
    height $record-people-bg-height
    &:not(.uk-record-background)
      background-color $record-background-bg-color
      height $record-people-height

  &.uk-record-places
    height $record-places-bg-height
    &:not(.uk-record-background)
      background-color $record-background-bg-color
      height $record-places-height

  &.uk-record-photo
    height $record-photo-bg-height
    &:not(.uk-record-background)
      background-color $record-background-bg-color
      height $record-photo-height

  &.uk-record-video
    height $record-video-bg-height
    &:not(.uk-record-background)
      background-color $record-background-bg-color
      height $record-video-height

  &.uk-record-music
    height $record-music-bg-height
    &:not(.uk-record-background)
      background-color $record-background-bg-color
      height $record-music-height

  &.uk-record-eat
    height 400px
    &:not(.uk-record-background)
      background-color $record-background-bg-color
      height 160px


  // record navigation
  >.uk-subnav
    position absolute
    bottom 0
    margin 0
    height $record-navigation-height
    background-color $record-navigation-bg-color
    opacity $record-navigation-opacity

    li
      margin 0
      padding 0
      text-align center
      text-transform capitalize
      padding-top $record-navigation-padding-top
      padding-bottom $record-navigation-padding-bottom
      cursor pointer

      &:before
        float left
        height 30px
        margin-top 4px
        border-width 2px
        opacity 0.8
      a
        position relative
        color $record-navigation-list-item-color
        font-size $record-navigation-list-item-font-size
        height calc($record-navigation-height - $record-navigation-padding-top - $record-navigation-padding-bottom)
        line-height calc($record-navigation-height - $record-navigation-padding-top - $record-navigation-padding-bottom)
        font-weight $record-navigation-list-item-font-weight

        &:before
          content " "
          position absolute

      &:nth-child(-n+2)
        position relative
        a
          svg
            margin-right 6px
            height 16px
            top 12px
            fill #444c51

      &:nth-child(3)
        position relative
        a
          svg
            margin-right 6px
            height 20px
            top 9px
            fill #444c51

+media-query(screen, max-width 600px )
  .uk-record-block

    >.uk-subnav
      li
        a
          font-size 16px

    .uk-record-information
      >.record-title
        font-size 20px
        margin-bottom 10px
      >.record-emotion
        font-size 20px


    >.uk-record-category
      size 60px
      bottom 40px
      right 10px
      border-radius 50%
      overflow hidden

      &.uk-record-category-has-icon
        img
          top calc("50% - 15px")
          height 30px


