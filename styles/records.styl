body
  background #505b62

.uk-record-content
  margin-bottom 50px
  background #505b62


.uk-record-block
  position relative
  width 100%
  margin-bottom 50px
  &:first-child
    margin-top 50px

  &:not(.uk-record-background)
    > img
      display none
    .uk-record-information
      >.record-title
        color #444c51
      >.record-emotion
        color #444c51
    >.uk-record-information
      >.record-emotion
        > svg
          g
            fill #444c51


  &.uk-record-music
    >.uk-record-information
      >.record-title
        margin-left 22px
        &:before
          position absolute
          content " "
          background url('/images/icon_play.svg')
          background-repeat no-repeat
          height 16px
          width 16px
          left 0

  &.uk-record-video
    iframe
      height calc("100% - 60px")



  >.uk-record-information
    position absolute
    bottom 80px
    height 50px
    margin-left 30px

    >.record-title
      font-size 26px
      color #ffffff
      margin-bottom 15px

    >.record-emotion
      font-size 24px
      font-weight 100
      text-transform capitalize

      color #ffffff

      > svg
        position relative
        top 2px
        height 18px
        margin-right 10px
        g
          fill #ffffff


  &.uk-record-background
    display: inline-block
    vertical-align middle
    height 100%
    > img
      vertical-align middle
      width 100%
      opacity 0.5
      height 100%
      box-sizing border-box

  // category
  >.uk-record-category
    position absolute
    display inline-block
    vertical-align middle
    z-index 1
    background-color #dee1e3
    size 90px
    bottom 40px
    right 10px
    border-radius 50%
    overflow hidden

    &.uk-record-category-has-icon
      border 1px solid #ffffff
      img
        position relative
        display block
        top calc("50% - 25px")
        height 50px
    img
      border-radius 50%
      width 100%


  // people
  &.uk-record-people
    height 300px
    &:not(.uk-record-background)
      background-color #f5f5f5
      height 160px

  &.uk-record-places
    height 350px
    &:not(.uk-record-background)
      background-color #f5f5f5
      height 160px

  &.uk-record-photo
    height 350px
    &:not(.uk-record-background)
      background-color #f5f5f5
      height 160px

  &.uk-record-video
    height 400px
    &:not(.uk-record-background)
      background-color #f5f5f5
      height 160px

  &.uk-record-music
    height 400px
    &:not(.uk-record-background)
      background-color #f5f5f5
      height 160px

  &.uk-record-eat
    height 400px
    &:not(.uk-record-background)
      background-color #f5f5f5
      height 160px


  >.uk-subnav
    position absolute
    bottom 0
    margin 0
    height 60px
    background-color #ffffff

    li
      margin 0
      padding 0
      text-align center
      text-transform capitalize
      padding-top 15px
      padding-bottom 5px
      cursor pointer

      &:before
        float left
        height 30px
        margin-top 4px
        border-width 2px
        opacity 0.8
      a
        position relative
        color #444c51
        font-size 20px
        height 40px
        line-height 40px
        font-weight 200

        &:before
          content " "
          position absolute

      &:nth-child(-n+2)
        position relative
        a
          svg
            margin-right 6px
            height 16px
            top 12px
            fill #444c51

      &:nth-child(3)
        position relative
        a
          svg
            margin-right 6px
            height 20px
            top 9px
            fill #444c51

+media-query(screen, max-width 600px )
  .uk-record-block

    >.uk-subnav
      li
        a
          font-size 16px

    .uk-record-information
      >.record-title
        font-size 20px
        margin-bottom 10px
      >.record-emotion
        font-size 20px


    >.uk-record-category
      size 60px
      bottom 40px
      right 10px
      border-radius 50%
      overflow hidden

      &.uk-record-category-has-icon
        img
          top calc("50% - 15px")
          height 30px


